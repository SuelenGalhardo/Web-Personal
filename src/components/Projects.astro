---
import GitHub from "./icons/GitHub.astro";
import JavaScript from "./icons/JavaScript.astro";
import React from "./icons/React.astro";
import Sass from "./icons/Sass.astro";
import Html from "./icons/Html.astro";
import Css from "./icons/Css.astro";
import Tailwind from "./icons/TailwindCss.astro";
import TypeScript from "./icons/TypeScript.astro";
import ViteJs from "./icons/ViteJs.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";


const TAGS = {
  HTML: {
    name: "Html",
    class: "bg-black text-white",
    icon: Html,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  JAVASCRIPT: {
    name: " javascript",
    class: "bg-[#003159] text-white",
    icon: JavaScript,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: Css,
  },
  SASS: {
    name: "SASS",
    class: "bg-[#003159] text-white",
    icon: Sass,
  },
  REACT: {
    name: "React",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#003159] text-white",
    icon: TypeScript,
  },
  VITEJS: {
    name: "viteJs",
    class: "bg-[#003159] text-white",
    icon: ViteJs,
  },
};
const PROJECTS = [
  {
    title: "Anonymous Proxys",
    description:
      "Creación de una página web responsive basada en un diseño proporcionado.",
    link: "https://beta.adalab.es/modulo-1-evaluacion-final-SuelenGalhardo/",
    github: "https://github.com/SuelenGalhardo/Anonymous-HTML-CSS",
    image: "/projects/Anonymous.png",
    tags: [TAGS.CSS, TAGS.HTML],
  },
  {
    title: "Disney Character Database",
    description:
      "Web Responsive donde almacenar todos tus personajes favoritos de Disney.",
    link: "https://suelengalhardo.github.io/Disney-Character-Database/",
    github: "https://suelengalhardo.github.io/Disney-Character-Database/",
    image: "/projects/Disney.png",
    tags: [TAGS.HTML, TAGS.SASS, TAGS.JAVASCRIPT],
  },
  {
    title: "Buscador Rick And Morty",
    description:
      "Busca tus personajes favoritos de Rick and Morty y averigua su procedencia y otros datos interesantes.",
    link: "https://suelengalhardo.github.io/Rick-and-Morty/",
    github: "https://github.com/SuelenGalhardo/Rick-and-Morty",
    image: "/projects/Rickmorty.png",
    tags: [TAGS.HTML, TAGS.SASS, TAGS.REACT],
  },
  {
    title: "NLW-Notes",
    description: "Agrega tus notas",
    link: "https://nlw-expert-notes-react-peach.vercel.app/",
    github: "https://github.com/SuelenGalhardo/NLW-Expert-Notes-React",
    image: "/projects/Nota.png",
    tags: [TAGS.HTML, TAGS.REACT, TAGS.VITEJS, TAGS.TYPESCRIPT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt=""
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
